<html>
<head>
<link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css'>
<link rel='stylesheet' href='~/css/styles.css'>
</head>
<center>
  <body>
<div class="container">
  <div class="jumbotron">
    <h1>Categories</h1>
  </div>
</div>
<div class="container">
@if (@Model.Count == 0)
{
<h3>No categories have been added yet!</h3>
}

@foreach (var category in Model)
{

<div class="card" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title">Category</h5>
    <p class="card-text"><a href='/categories/@category.GetId()'>@category.GetName()</a></p>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item">  <div class="row">

        <form action="/categories/@category.GetId()/delete" method="post">
          <button class="btn btn-sm" type="submit" name="button">Clear</button>
        </form>
        <form action="/categories/@category.GetId()/delete" method="post">
         <button class="btn btn-sm" type="submit" name="button">Delete</button><br><br>
        </form>

      <button class="btn btn-sm" ><a href='/categories/@category.GetId()/edit'>Edit</a></button>
      </div></li>
  </ul>
</div>
  }

</div>
<br><a class="card-link" href="/categories/new">Create a new Category</a>
<br><a class="card-link" href="/">Back home</a>


</div>
</body>
</center>
</html>
